@page "/"
@using MudBlazor.Extensions
@using MudBlazor.Extensions.Options
@inject MudBlazor.IDialogService DialogService

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
<MudText Class="mb-8">Welcome to your new app</MudText>

<MudAlert Severity="Severity.Normal">
    You can find documentation and examples on our website here:
    <MudLink Href="https://mudblazor.com" Target="_blank" Typo="Typo.body2" Color="Color.Primary">
        <b>www.mudblazor.com</b>
    </MudLink>
</MudAlert>

<MudButton OnClick="ShowDialog">dialog</MudButton>

@code
{
    private async Task ShowDialog()
    {
        var options = new DialogOptionsEx { CloseOnEscapeKey = true, DragMode = MudDialogDragMode.Simple };

        var res = await DialogService.ShowEx<ItemDialog>("Simple Dialog", options);

        //var options = new DialogOptions { CloseOnEscapeKey = true };

        //var dialog = await DialogService.ShowAsync<ItemDialog>("Simple Dialog", options);
    }
}